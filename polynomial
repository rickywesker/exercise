/*Program: Calculate the value of a polynomial
  Oct 21st, 2017
  By Ricky Chan*/

#include<iostream>
#include<math.h>
using namespace std;

int main() {
	int n,i;
	float x,value;
	cin >> x >> n;//why cannot use printf("%f %d", &x,&n);?
	value = 0.0;
	for (i = 0; i < n + 1 ; i++) {
		value += pow(x, i);
	}
	printf("%.2f", value);
	return 0;
}
